{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "lib/types",
    "module": "esnext",
    "target": "ES6",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2018", "dom"],
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["src/**/tests"]
}
